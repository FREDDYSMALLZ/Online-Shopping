@model IEnumerable<Online_Shopping.Models.AdminViewModels.AdminPages.AdminPagesVm>

@{
    ViewBag.Title = "Admin Pages";
}

<h1>Admin Pages</h1>

<p>
    @Html.ActionLink("Create New Page ", "CreatePage")
</p>

@if (!Model.Any())
{

    <h1 class="text-center">There are no Pages</h1>
}

else
{


    <table class="table sorting" id="AdminPages">
        <tr class="home">
            <th>
                Title
            </th>
            <th>
                Slug
            </th>
            <th>
                Sidebar
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr id="id_@item.Id" class="@item.Slug">
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Slug)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HasSidebar)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditPage", new { id = item.Id }) |
                    @Html.ActionLink("Details", "PageDetails", new { id = item.Id }) |

                    @if (item.Slug != "home")
                    {
                        @Html.ActionLink("Delete", "DeletePage", new { id = item.Id }, new { @class = "Delete" })
                    }

                </td>
            </tr>
        }

    </table>
}

@section Scripts {
    
    <script src="https://code.jquery.com/ui/1.12.0/jquery-ui.min.js"></script>

    <script>

        $(function () {

            /*
            * Delete the Page from the website
            */

            $("a.delete").click(function () {
                if (!confirm("Confirm page deletion")) return false;
            });


            /*
            * Organize the pages once deletion has occured.
            */

            $("table#pages tbody").sortable({
                items: "tr:not(.home)",
                placeholder: "ui-state-highlight",
                update: function () {
                    var ids = $("table#pages tbody").sortable("serialize");
                    var url = "/Admin/AdminPages/ReorderPages";

                    $.post(url, ids, function (data) {
                    });
                }
            });

        });

    </script>    
    
}
